# Application
NODE_ENV=development
PORT=3000
API_PREFIX=api/v1

# MongoDB
MONGODB_URI=mongodb://localhost:27017/student-dashboard
MONGODB_NAME=student-dashboard
MONGODB_MAX_POOL_SIZE=50

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=master
REDIS_TTL=3600
REDIS_MAX_RETRIES_PER_REQUEST=3

# JWT - Access Token
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h

# JWT - Refresh Token
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Rate Limiting (Nest Throttler)
THROTTLE_TTL=60
THROTTLE_LIMIT=100

# CORS
CORS_ORIGIN=http://localhost:3001,https://your-frontend.vercel.app

# Logging
LOG_LEVEL=info

# COMMON
BCRYPT_HASH_SALT=12
